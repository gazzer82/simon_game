html
	head
		title 'Simon Game'
		link(rel='stylesheet', href='/css/style.css')
	body
		.container_fluid
			.row
				.col-xs-10.col-xs-offset-1.col-lg-6.col-lg-offset-3
					.row.text-center.gameButtons
						#1.col-xs-6.button.simonButton.button1
						#2.col-xs-6.button.simonButton.button2
						#3.col-xs-6.button.simonButton.button3
						#4.col-xs-6.button.simonButton.button4
					.row.text-center-controlButtons
						.col-xs-10.col-xs-offset-1
							button#startStop.btn.btn-responsive Start
							button#strict.btn.btn-responsive Strict
							h3#count.countText 0
		script(src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
		script(src="http://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js")
		script(src="js/simon.js")